---
import Badge from "@/components/Badge.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import SocialPill from "@/components/SocialPill.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Desing System portfolio.dev"
  description="El catalogo de componentes de nuestro portfolio"
>
  <SectionContainer class="py-44 pb-32 flex flex-col gap-y-12">
    <article class="mb-10 text-xl font-semibold">
      <h1 class="mb-4">&LT;Badge /&gt;</h1>

      <Badge>Disponible para trabajar</Badge>
    </article>

    <article class="mb-10 text-xl font-semibold">
      <h1 class="mb-4">&lt SocialPill /&gt;</h1>

      <div class="flex">
        <SocialPill href="https://www.linkedin.com/in/leaeraso">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
      </div>
    </article>
  </SectionContainer>
</Layout>
