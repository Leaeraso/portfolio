---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section class="w-fulll lg:w-[740px] mx-auto py-44">
      <img
        class="rounded-full w-12 h-12 mb-2"
        src="/Leandro.jpg"
        alt="Leandro Eraso photo"
      />
      <h1 class="text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hey, soy Leandro <a
          href="https://www.linkedin.com/in/leaeraso"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-2xl opacity-80 text-wrap">
        <span>Desarrollador Web y Programador Frontend.</span>
        <span class="text-blue-300/90">De Mendoza, Argentina.</span>
        <span class="text-yellow-200/90">
          Especializado en crear páginas web únicas.
        </span><span class="opacity-75">
          Comprometido con la mejora continua y la entrega de proyectos de alta
          calidad.
        </span>
      </h2>

      <ul>
        <li>
          <a href="https://www.linkedin.com/in/leaeraso">
            <LinkedInIcon class="w-6 h-6" />
            LinkedIn
          </a>
        </li>
        <li>
          <a href="https://www.linkedin.com/in/leaeraso">
            <LinkedInIcon class="w-6 h-6" />
            LinkedIn
          </a>
        </li>
      </ul>
    </section>
  </main>
</Layout>
